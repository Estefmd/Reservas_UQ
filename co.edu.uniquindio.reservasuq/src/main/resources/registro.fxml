<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="center" prefHeight="400.0" prefWidth="400.0" spacing="30.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.reservasuq.controladores.RegistroControlador">


    <Label text="Panel de registro">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

        <Label text="Cédula:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="txtCedula" minHeight="30.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />


        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <PasswordField fx:id="txtNombre" minHeight="30.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Correo:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <PasswordField fx:id="txtCorreo" minHeight="30.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   <Label text="Tipo de usuario:" />
   <ComboBox fx:id="cbTipoUsuario" prefHeight="31.0" prefWidth="401.0" />

        <Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <PasswordField fx:id="pfContrasenia" minHeight="30.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />


    

    <Button minHeight="40.0" minWidth="130.0" onAction="#registro" text="Registro" />


</VBox>
